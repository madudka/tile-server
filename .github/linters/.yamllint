extends: default

rules:
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false

  line-length:
    max: 120
    level: warning

  quoted-strings:
    quote-type: any
    required: false

  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1

  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1

  document-start: disable
  truthy:
    level: warning
    ignore: |
      .github/workflows/
